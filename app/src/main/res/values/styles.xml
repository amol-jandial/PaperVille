<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_current">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_highlight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="text_pending">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/non_highlight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/non_highlight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="text_filled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/highlight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="button_edit">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@drawable/icon_edit</item>
    </style>

    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/shape_appearance_overlay_custom</item>
    </style>
    
    <style name="shape_appearance_overlay_custom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="small_dot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/circle_filled</item>
    </style>

    <style name="profile_image_view">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="App.Custom.Indicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="color">@color/highlight</item>
    </style>

    <style name="edittext_phone_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_custom</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_highlight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normal_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>