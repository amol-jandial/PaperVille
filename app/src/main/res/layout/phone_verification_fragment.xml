<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_back_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_back_final"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Phone"
        android:textColor="@color/text_highlight"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_back_final"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_back_final" />

    <TextView
        android:id="@+id/textView10"
        style="@style/text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Code is sent to xxxxxxxxx"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/edittext_phone_1"
        style="@style/edittext_phone_style"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toStartOf="@+id/edittext_phone_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edittext_phone_2"
        style="@style/edittext_phone_style"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/edittext_phone_1"
        app:layout_constraintEnd_toStartOf="@+id/edittext_phone_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edittext_phone_1"
        app:layout_constraintTop_toTopOf="@+id/edittext_phone_1" />

    <EditText
        android:id="@+id/edittext_phone_3"
        style="@style/edittext_phone_style"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/edittext_phone_2"
        app:layout_constraintEnd_toStartOf="@+id/edittext_phone_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edittext_phone_2"
        app:layout_constraintTop_toTopOf="@+id/edittext_phone_2" />

    <EditText
        android:id="@+id/edittext_phone_4"
        style="@style/edittext_phone_style"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/edittext_phone_3"
        app:layout_constraintEnd_toStartOf="@+id/edittext_phone_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edittext_phone_3"
        app:layout_constraintTop_toTopOf="@+id/edittext_phone_3" />

    <EditText
        android:id="@+id/edittext_phone_5"
        style="@style/edittext_phone_style"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/edittext_phone_4"
        app:layout_constraintEnd_toStartOf="@+id/edittext_phone_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edittext_phone_4"
        app:layout_constraintTop_toTopOf="@+id/edittext_phone_4" />

    <EditText
        android:id="@+id/edittext_phone_6"
        style="@style/edittext_phone_style"
        android:paddingVertical="16dp"
        android:layout_marginHorizontal="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/edittext_phone_5"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edittext_phone_5"
        app:layout_constraintTop_toTopOf="@+id/edittext_phone_5" />

    <TextView
        android:id="@+id/textView11"
        style="@style/text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Didn't recieve code?"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edittext_phone_6"
        app:layout_constraintStart_toStartOf="@+id/edittext_phone_1"
        app:layout_constraintTop_toBottomOf="@+id/edittext_phone_1" />

    <TextView
        android:id="@+id/text_request_again"
        style="@style/text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:text="Request Again"
        android:textColor="@color/non_highlight"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edittext_phone_6"
        app:layout_constraintStart_toStartOf="@+id/edittext_phone_1"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />


</androidx.constraintlayout.widget.ConstraintLayout>